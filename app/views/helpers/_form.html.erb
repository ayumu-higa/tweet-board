<div class="row">
  <div class="col-xs-6">

  <%= form_for(helper) do |f| %>
   <% if helper.errors.any? %>
    <div class="alert alert-">
      <ul>
        <% helper.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    
    
    
    </div>
    <% end %>
  
   <div class="form-group">
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status, class: 'form-control' %>
   </div>
  
   <div class="form-group">
    <%= f.label :content, 'ヘルパー' %>
    <%= f.text_field :content, class: 'form-control' %>
   </div>
  
    <%= f.submit '投稿', class: 'btn btn-primary' %>
  
  <% end %>
 </div>
</div>