<ul class="media-list">
  <% helpers.each do |helper| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(helper.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to helper.user.name, user_path(helper.user) %> <span class="text-muted">posted at <%= helper.created_at %></span>
        </div>
        <div>
          <p><%= helper.content %></p>
        </div>
        <div>
          <% if current_user == helper.user %>
            <%= link_to "Delete", helper, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate helpers %>
</ul>